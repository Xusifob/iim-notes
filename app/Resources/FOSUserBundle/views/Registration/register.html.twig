{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('bundles/app/assets/global/plugins/select2/css/select2.min.css')}}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/app/assets/global/plugins/select2/css/select2-bootstrap.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="{{ asset('bundles/app/assets/global/css/components.min.css')}}" rel="stylesheet" id="style_components" type="text/css" />
    <link href="{{ asset('bundles/app/assets/global/css/plugins.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="{{ asset('bundles/app/assets/pages/css/login.min.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}Ajouter un administrateur{% endblock %}
{% block bodyClass %}login{% endblock %}

{% block body %}
    <div class="menu-toggler sidebar-toggler"></div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="{{ asset('bundles/app/assets/pages/img/logo-big.png')}}" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

            {{ form_errors(form) }}

            <h3 class="form-title font-green">Register</h3>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">E-mail</label>
                {{ form_widget(form.email, { 'attr': {'class': "form-control",'placeholder': "E-mail"} }) }}
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">E-mail</label>
                {{ form_widget(form.username, { 'attr': {'class': "form-control",'placeholder': "Username"} }) }}
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control",'placeholder': "Password"} }) }}
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Repeat Password</label>
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control",'placeholder': "Repeat Password"} }) }}
            </div>
            {{ form_rest(form) }}
            <div class="form-actions">
                <button type="submit" class="btn green uppercase">Regiter</button>
            </div>
        </form>
        <div class="create-account">
            <p>
                <a href="{{ path('fos_user_security_login') }}" id="register-btn" class="uppercase">Already have an account</a>
            </p>
        </div>
        <!-- END FORGOT PASSWORD FORM -->
    </div>
    <div class="copyright"> 2015 Â© Bastien Malahieude </div>
{% endblock %}
