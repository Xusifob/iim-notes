{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('bundles/app/assets/global/plugins/select2/css/select2.min.css')}}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/app/assets/global/plugins/select2/css/select2-bootstrap.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="{{ asset('bundles/app/assets/global/css/components.min.css')}}" rel="stylesheet" id="style_components" type="text/css" />
    <link href="{{ asset('bundles/app/assets/global/css/plugins.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="{{ asset('bundles/app/assets/pages/css/login.min.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}Ajouter un administrateur{% endblock %}
{% block bodyClass %}login{% endblock %}

{% block body %}
    <div class="menu-toggler sidebar-toggler"></div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index-2.html">
            <img src="{{ asset('bundles/app/assets/pages/img/logo-big.png')}}" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if error %}
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="icon fa fa-warning"></i>{{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <h3 class="form-title font-green">Login</h3>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Pseudo</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required="required" />
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Mot de passe</label>
            <input type="password" id="password" name="_password"  class="form-control" placeholder="Password"  required="required" />

        </div>
            <div class="form-actions">
                <button type="submit" class="btn green uppercase">Login</button>
                <label class="rememberme check" id="remember_me">
                    <div class="checker"><span><input type="checkbox" id="remember_me" name="_remember_me"  value="1"></span></div>Remember </label>
            </div>
        </form>
        <div class="create-account">
            <p>
                <a href="{{ path('fos_user_registration_register') }}" id="register-btn" class="uppercase">Create an account</a>
            </p>
        </div>
        <!-- END FORGOT PASSWORD FORM -->
    </div>
    <div class="copyright"> 2015 © Bastien Malahieude </div>
{% endblock %}